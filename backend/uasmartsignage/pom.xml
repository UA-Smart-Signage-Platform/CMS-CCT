	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.8.8</version>
				<configuration>
                    <excludes>
                        <exclude>**/initializer/**</exclude>
						<exclude>**/Mqtt/**</exclude>
						<exclude>**/Configuration/**</exclude>
						<exclude>**/exceptions/**</exclude>
						<exclude>**/UasmartsignageApplication.java</exclude>
						<exclude>**/authentication/**</exclude>
						<exclude>**/Services/JwtUtilService.java</exclude>
						<exclude>**/Services/LogsService.java</exclude>
						<exclude>**/Controllers/LogController</exclude>
                    </excludes>
                </configuration>
				<executions>
					<execution>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<execution>
						<id>report</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>


	</build>

